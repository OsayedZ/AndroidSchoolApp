<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AndroidSchoolApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors (slightly lighter for dark theme) -->
        <item name="colorPrimary">@color/primary_blue_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/primary_blue_dark</item>
        <item name="colorOnPrimaryContainer">@color/primary_blue_light</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_orange_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/secondary_orange_dark</item>
        <item name="colorOnSecondaryContainer">@color/secondary_orange_light</item>
        
        <!-- Background colors -->
        <item name="colorSurface">@color/background_card_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorSurfaceVariant">@color/background_dark</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_dark</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/background_dark</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <item name="android:textColorHint">@color/text_hint_dark</item>
    </style>
    
    <!-- Toolbar theme for dark mode -->
    <style name="Theme.AndroidSchoolApp.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/background_card_dark</item>
        <item name="titleTextColor">@color/text_primary_dark</item>
        <item name="android:theme">@style/ThemeOverlay.Material3.Dark</item>
    </style>
    
    <!-- Card styles for dark mode -->
    <style name="Theme.AndroidSchoolApp.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/background_card_dark</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>
    
    <!-- Bottom navigation style for dark mode -->
    <style name="Theme.AndroidSchoolApp.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/primary_blue_light</item>
        <item name="itemTextColor">@color/primary_blue_light</item>
        <item name="android:background">@color/background_card_dark</item>
    </style>
</resources>