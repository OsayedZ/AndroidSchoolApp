<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:layout_margin="16dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/class_card_border"
        android:padding="10dp"
        android:orientation="vertical">

        <!-- Student Name -->
        <TextView
            android:id="@+id/tvStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: Ahmed Youssef"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Student Email -->
        <TextView
            android:id="@+id/tvStudentEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: ahmed@example.com"
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer: 42"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp"/>

        <!-- Mark Entry -->
        <EditText
            android:id="@+id/edtStudentMark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter mark"
            android:inputType="numberDecimal"
            android:layout_marginTop="12dp"
            android:background="@drawable/class_card_border"
            android:padding="10dp"/>

        <Button
            android:id="@+id/btn_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Grade"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>
